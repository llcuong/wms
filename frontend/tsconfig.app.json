{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    /* Module Resolution */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@routes/configs": ["routes/configs/index.ts"],
      "@routes/navigation": ["routes/navigation/index.ts"],
      "@routes/utils": ["routes/utils/index.ts"],
      "@routes/types": ["routes/types/index.ts"],
      "@global/types": ["types/global.types.ts"],
      "@layouts": ["shared/layouts/index.ts"],
      "@hooks": ["shared/hooks/index.ts"],
      "@icons": ["shared/icons/index.ts"],
      "@components/*": ["shared/components/*"],
      "@modules/*": ["shared/modules/*"],
      "@store/*": ["shared/stores/*"],
      "@manage-account/*": ["admin/manage-account/*"],
      "@manage-data/*": ["admin/manage-data/*"],
      "@packing/*": ["apps/packing/*"],
      "@former/*": ["apps/former/*"],
      "@semi-finished/*": ["apps/semi-finished/*"],
      "@finished/*": ["apps/finished/*"]
    }
  },
  "include": [
    "src"
  ]
}